<div class="jumbotron">
  <div class="container">
    <div class="col-md-4 hidden-sm-down">
      <img class="img-fluid img-rounded" style="width: 100%;" src="<%= course.image %>" alt="<%= course.title %> image"/>
    </div>
    <div class="col-md-8">
      <h1 class="display-title"><%= course.title %></h1>
      <span class="tag tag-info"><%= course.difficulty.capitalize %></span>
      <% course.categories.each do |category| %>
        <a href="<%= category.link %>">
          <span class="tag tag-default"><%= category.title %></span>
        </a>
      <% end %>
      <p><%= course.description %></p>
    </div>
  </div>
</div>

<div class="container">
  <%= render_partial '_breadcrumbs', crumbs: {
    "Courses" => "/",
    course.title => nil
  } %>

  <div class="cards">
    <% course.sections.each do |section| %>
      <%= render_partial '_card', object: section, link_text: 'View this section', external_link: false %>
    <% end %>
  </div>
</div>