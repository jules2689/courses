<div class="jumbotron">
  <div class="container">
    <h1 class="display-title"><%= course.title %> - <%= section.title %></h1>
    <p><%= section.description %></p>
    <p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more Â»</a></p>
  </div>
</div>

<div class="container">
  <%= render_partial '_breadcrumbs', crumbs: {
    "Courses" => "/",
    course.title => course.link,
    section.title => nil
  } %>

  <div class="cards">
    <% section.works.each do |work| %>
      <%= render_partial '_card', object: work, link_text: 'View this work', external_link: true %>
    <% end %>
  </div>
</div>